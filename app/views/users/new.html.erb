<h1>Register</h1>

<%= form_with model: @user, data: { turbo: false } do |form| %>
<%= render "shared/error_messages", resource: @user %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %><br>
  </div>

  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %><br>
  </div>

  <div>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %><br>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %><br>
  </div>

  <div>
    <%= form.label :birth_date %><br>
    <%= form.date_field :birth_date %><br>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %><br>
  </div>

    <div>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation %><br>
  </div>

  <div>
    <%= form.submit t("users.views.new.register") %>
  </div>
<% end %>