<h1> <%= current_user.full_name %>'s profile </h1>
<%= form_with model: @user, data: { turbo: false } do |form| %>
  <%= render "shared/error_messages", resource: @user %>
  <%= render "shared/flash" %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %><br>
  </div>

  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %><br>
  </div>

  <div>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %><br>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %><br>
  </div>

  <div>
    <%= form.label :birth_date %><br>
    <%= form.date_field :birth_date %><br>
  </div>

  <div>
    <%= form.submit t("users.views.show.update") %>
  </div>
<% end %>
<%= link_to "Change password", edit_password_path %>
