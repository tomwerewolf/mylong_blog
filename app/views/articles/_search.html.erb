<h3><%= t("articles.views.index.search") %></h3>
  <%= form_tag search_articles_path, method: :get do |form| %>
    <%= label_tag t("articles.views.search.by_title") %>
    <%= text_field_tag :title, params[:title] %>
    <%= label_tag t("articles.views.search.by_cat") %>
    <%= collection_select nil, :category_id, Category.order(:name), :id, :name, include_blank: true, selected: params[:category_id] %>  
    <%= label_tag t("articles.views.search.from") %>
    <%= date_field_tag :date_from, value = params[:date_from] %>
    <%= label_tag t("articles.views.search.to") %>
    <%= date_field_tag :date_to, value = params[:date_to] %>
    <%= submit_tag t("articles.views.index.search") %>
  <% end %>