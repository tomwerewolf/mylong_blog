<h1><%= @article.title %></h1>

<p>Posted by <%#=link_to @author.full_name, user_posts_path(@author) %></p>

<% if @article.image.attached? %>
<%= image_tag @article.image, height: 200 %><br>
<% end %>

<p><%= @article.body %></p>

<ul>
  <% if current_user == @author %>
    <li><%= link_to t("articles.views.show.edit"), edit_article_path(@article) %></li>
    <li><%= link_to t("articles.views.show.del"), article_path(@article), data: {
                              turbo_method: :delete,
                              turbo_confirm: t("articles.views.show.confirm")
                              } %></li>
  <% end %>                        
</ul>

<h2><%= t("comments.views.cmt") %></h2>
<%= render @comments %>

<h2><%= t("comments.views.add") %></h2>
<%= render 'comments/form' %>

