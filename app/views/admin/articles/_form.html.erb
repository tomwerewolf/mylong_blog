<%= form_with model: article, data: { turbo: false } do |form| %>
<%= render "shared/error_messages", resource: article %>
  <% if article.image.attached? %>
    <%= image_tag article.image, height: 200 %><br>
  <% end %>

  <div>
    <%= form.label :category %><br>
    <%= form.collection_select :category_id, Category.all, :id, :name %><br>
  </div>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %><br>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, Article.statuses.keys.to_a %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>