<h1> <%= @user.full_name %></h1>
<%= form_with model: [:admin, @user], url: edit_roles_admin_user_path, data: { turbo: false } do |form| %>
  <%= render "shared/error_messages", resource: @user %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username, disabled: true %><br>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email, disabled: true %><br>
  </div>

  <div>
    <% [:admin, :user].each do |role| %>
      <% if @user.has_role?(role) %>
        <%= form.check_box role, { checked: true }, role, "cancel" %>
      <% else %>
        <%= form.check_box role, { checked: false }, role, "cancel" %>
      <% end %>
      <%= form.label role %>
    <% end %>
  </div>

  <div>
    <%= form.submit t("users.views.show.update") %>
  </div>
<% end %>

